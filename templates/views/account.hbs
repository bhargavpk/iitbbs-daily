<html>
    <head>
        <title>Account page</title>
        <link rel="stylesheet" href="/css/account-style1.css">
        <link rel = "icon" href =  "/images/logo.png" type = "image/x-icon">
    </head>
    <body>
        <div id="nav-box">
        {{>header_index}}    
        <a href="/about" class="nav-ele">About</a>
        </div>
        <div class="container">
            <div class="post-box">
                <div id="user-message">{{userName}}'s Posts</div>
                <div id="post-populate-box"></div>
            </div>
            <div class="access-box">
                <div id="access-head">{{userName}}</div>
                <div id="access-body">
                    <div class="field">First name : {{name.firstName}}</div>
                    <div class="field">Last name : {{name.lastName}}</div>
                    <div class="field">E-mail : {{email}}</div>
                </div> 
            </div>
        </div>
        <script src="/js/accountapp.js"></script>
    </body>
</html>